                    android:textSize="16sp"
                    tools:text="Language Spoken" />

                <TextView
                    android:id="@+id/languageSpokenValueTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
