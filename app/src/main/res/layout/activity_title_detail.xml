                    android:layout_marginEnd="16dp"
                    android:text="See all"
                    android:textColor="#4399E0"
                    android:textSize="16sp"
                    tools:text="See all" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
